@model List<UserInfo>
<main class="container mt-4">
    <h1 class="h4 text-center text-primary fw-bold">
        <i class="bi bi-people-fill"></i> Toplantı Katılım Listesi
    </h1>

    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow-sm">
            <thead class="table-dark text-light">
                <tr class="text-center">
                    <th><i class="bi bi-person-fill"></i> Ad</th>
                    <th><i class="bi bi-envelope-fill"></i> Email</th>
                    <th><i class="bi bi-check-circle-fill"></i> Katılım Durumu</th>
                    <th><i class="bi bi-eye-fill"></i> Detay</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 0;
                }

                @foreach (var user in Model)
                {
                    var durum = user.WillAttend ? "Evet" : "Hayır";
                    var ClassName = user.WillAttend ? "table-success" : "table-danger";
                    if (user.WillAttend) { i++; }

                    <tr class="@ClassName text-center">
                        <td class="fw-semibold">@user.Name</td>
                        <td>@user.Email</td>
                        <td><span class="badge bg-@(user.WillAttend ? "success" : "danger")">@durum</span></td>
                        <td>
                            <a class="btn btn-sm btn-outline-primary shadow-sm" href="/Meeting/details/@user.Id">
                                <i class="bi bi-info-circle"></i> Detay
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card shadow-sm rounded-4 text-center mt-4">
        <div class="card-body">
            <h5 class="fw-bold text-success"><i class="bi bi-person-check-fill"></i> Katılımcı Sayısı</h5>
            <p class="fs-4 fw-bold text-primary">@i kişi</p>
        </div>
    </div>
</main>
